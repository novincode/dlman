{
  "name": "dlman",
  "version": "1.8.0",
  "private": true,
  "description": "A modern, open-source download manager",
  "keywords": ["download", "manager", "tauri", "rust", "react"],
  "license": "MIT",
  "author": "DLMan Contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/novincode/dlman.git"
  },
  "scripts": {
    "dev": "pnpm --filter @dlman/desktop tauri dev",
    "build": "pnpm --filter @dlman/desktop build",
    "preview": "pnpm --filter @dlman/desktop preview",
    "ext:dev": "pnpm --filter @dlman/extension dev",
    "ext:dev:firefox": "pnpm --filter @dlman/extension dev:firefox",
    "ext:build": "pnpm --filter @dlman/extension build",
    "ext:build:firefox": "pnpm --filter @dlman/extension build:firefox",
    "ext:zip": "pnpm --filter @dlman/extension zip",
    "ext:zip:firefox": "pnpm --filter @dlman/extension zip:firefox",
    "ext:build:all": "pnpm ext:build && pnpm ext:build:firefox",
    "ext:zip:all": "pnpm ext:zip && pnpm ext:zip:firefox",
    "lint": "pnpm -r lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "pnpm -r clean && rm -rf node_modules"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "typescript": "^5.4.2"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
